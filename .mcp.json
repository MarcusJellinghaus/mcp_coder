{
  "mcpServers": {
    "code-checker": {
      "type": "stdio",
      "command": "${MCP_CODER_VENV_DIR}\\Scripts\\mcp-code-checker.exe",
      "args": [
        "--project-dir",
        "${MCP_CODER_PROJECT_DIR}",
        "--python-executable",
        "${MCP_CODER_VENV_DIR}\\Scripts\\python.exe",
        "--venv-path",
        "${MCP_CODER_VENV_DIR}",
        "--test-folder",
        "tests",
        "--log-level",
        "INFO"
      ],
      "env": {
        "PYTHONPATH": "${MCP_CODER_PROJECT_DIR}\\"
      }
    },
    "filesystem": {
      "type": "stdio",
      "command": "${MCP_CODER_VENV_DIR}\\Scripts\\mcp-server-filesystem.exe",
      "args": [
        "--project-dir",
        "${MCP_CODER_PROJECT_DIR}",
        "--log-level",
        "INFO",
        "--reference-project",
        "p_fs=${USERPROFILE}\\Documents\\GitHub\\mcp_server_filesystem",
        "--reference-project",
        "p_config=${USERPROFILE}\\Documents\\GitHub\\mcp-config",
        "--reference-project",
        "p_checker=${USERPROFILE}\\Documents\\GitHub\\mcp-code-checker"
      ],
      "env": {
        "PYTHONPATH": "${MCP_CODER_VENV_DIR}\\Lib\\"
      }
    }
  }
}